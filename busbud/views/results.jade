extends layout

block content
  .results
    .results__header
      .results__header--information
        .results__header__title
          span.results__title--location Montreal #{origin}
          span.results__title--arrow.fa.fa-long-arrow-right
          span.results__title--location #{destination} new Nyork
        .results__header__details
          span.results__details--data 26-05-02
          span.results__details--data 2 passangers
      a.results__header--search.fa.fa-search(data-toggle="collapse", data-target="#search")
    #search.collapse
      include _search.jade

    ul.results__list
      each val, i in results.departure
        li.results__item
          .results__item__departure
            .results__item__date= results.departure[i]
            .results__item__location= results.origin[i]
          .results__item__arrival
            .results__item__arrival--time
              .results__item__date= results.arrival[i]
              .results__item__arrival--time-sub= results.diffDays[i]
            .results__item__location= results.destination[i]
          .results__item__diffTime= results.diffTime[i]

          .results__item__price
            .results__item__price--number= "24 $CAM"



